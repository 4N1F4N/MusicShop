<a>Status: <%= @order.order_status.last.title %></a>
<a>Id: <%= @order.id %></a>
<% @order.ordered_product.each do |product|%>
  <div>
    <% select_product = Product.find_by(id: product.product_id) %>
    <a><%= select_product.title %></a>
    <a><%= select_product.price %></a>
  </div>
<% end %>
<% @order.order_status.each do |status|%>
  <div>
    <a>Название статуса: <%= status.title %></a>
    <a>Время: <%= status.created_at %></a>
    <a>ID: <%= status.id %></a>
  </div>
<% end %>